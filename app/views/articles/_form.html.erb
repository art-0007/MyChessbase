<%= render 'shared/errors', object: @article %>

<%= form_with model: @article, html: { multipart: true } do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, rows: "15", class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :image %>
    </div>

    <div class="col-sm-10">
      <%= f.file_field :image,  class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Create Article!", class: 'btn btn-primary' %>
<% end %>