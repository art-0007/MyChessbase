<% provide :page_title, 'Pazzles' %>
<% currently_at 'Pazzles' %>

<h1 class="mb-4">Pazzles</h1>

<%= link_to 'New pazzle', new_pazzle_path, class: 'btn btn-primary btn-lg mb-3' %>

<% @pazzles.each do |pazzle| %>
  <article class="card my-3">
    <div class="card-body">
      <h4><%= pazzle.title %></h2>

      <section class="card-text">
        <time datetime="<%= pazzle.formatted_created_at %>">
          <small><%= pazzle.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= truncate strip_tags(pazzle.body) %>
        </p>
      </section>

      <%= link_to 'Show', pazzle_path(pazzle), class: 'btn btn-primary' %> 
      <%= link_to 'Edit', edit_pazzle_path(pazzle), class: 'btn btn-secondary' %>
      <%= link_to 'Destroy', pazzle_path(pazzle), class: 'btn btn-danger',
        data: {method: :delete, confirm: 'Are you sure?'} %>
    </div>
  </article>
<% end %>