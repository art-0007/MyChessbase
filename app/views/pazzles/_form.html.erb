<%= render 'shared/errors', object: @pazzle %>

<%= form_with model: @pazzle do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
</div>

<div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
</div>

<div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :solution %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :solution, class: 'form-control' %>
    </div>
</div>



  <%= f.submit "Submit Pazzle!", class: 'btn btn-primary' %>
<% end %>